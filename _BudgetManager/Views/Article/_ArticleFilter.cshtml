﻿﻿﻿@model DataAccess.Models.ArticleFilterModel

@using (Html.BeginForm("Index", "Article", FormMethod.Post))
{
    <div class="form-inline" style="margin-bottom: 30px;">
        <div class="form-group">
            @Html.TextBoxFor(model => model.ArticleName, htmlAttributes: new { @class = "form-control", placeholder = "Article Name" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.CategoryName, htmlAttributes: new { @class = "form-control", placeholder = "Category Name" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.CurrencySymbol, htmlAttributes: new { @class = "form-control", placeholder = "Currency Symbol" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.PayName, htmlAttributes: new { @class = "form-control", placeholder = "Pay Name" })
        </div>
        <div class="form-group">
            <button type="button" onclick="applyFilter(this)" class="btn btn-primary">Search</button>
        </div>
    </div>
}
